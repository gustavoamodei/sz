@model sz.Models.SimulOB
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Create";

}

<h1>Create</h1>

<h4>SimulOB</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @{
                if (@ViewBag.erro != null)
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewBag.erro
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            }
            @{
                if (@ViewBag.sucesso != null)
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="alert alert-primary alert-dismissible fade show" role="alert">
                        @ViewBag.sucesso
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            }
            <div class="form-group">
                <label asp-for="OleoBaseId" class="control-label"></label>
                <select asp-for="OleoBaseId" class="form-control" asp-items="ViewBag.OleoBaseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ml" class="control-label"></label>
                <input asp-for="Ml" class="form-control" />
                <span asp-validation-for="Ml" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-controller="SimulOB" asp-action="VerificaAddOb"><button class="btn btn-danger" type="button">ADD Óleo Essencial</button> </a>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
