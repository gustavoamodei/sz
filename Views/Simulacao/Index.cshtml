@model IEnumerable<sz.Models.Simulacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeSimulacao)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Lucro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco_Parcial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Margem_lucro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeSimulacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lucro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco_Parcial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Margem_lucro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
