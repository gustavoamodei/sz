@model sz.Models.SimulOE

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SimulOE</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @{
                if (@ViewBag.erro != null)
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewBag.erro
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="OleoEssencialId" class="control-label"></label>
                <select asp-for="OleoEssencialId" class="form-control" asp-items="ViewBag.OleoEssencialId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GotasOE" class="control-label"></label>
                <input asp-for="GotasOE" class="form-control" />
                <span asp-validation-for="GotasOE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

                <a asp-controller="SimulOE" asp-action="VerificaAddOe"><button class="btn btn-danger" type="button">Finalizar</button> </a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

